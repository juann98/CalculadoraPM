<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradiente"
    tools:context=".vista_menu">

    <Button
        android:id="@+id/btn_vista_personas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personas"
        app:layout_constraintBottom_toTopOf="@+id/btn_vista_carros"
        android:background="@drawable/boton_redondeado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_vista_calculadora" />

    <Button
        android:id="@+id/btn_vista_carros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carros"
        app:layout_constraintBottom_toTopOf="@+id/btn_vista_imc"
        android:background="@drawable/boton_redondeado"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_vista_personas" />

    <Button
        android:id="@+id/btn_vista_imc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMC"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/boton_redondeado"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_vista_carros" />

    <Button
        android:id="@+id/btn_vista_calculadora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="CALCULADORA"
        android:background="@drawable/boton_redondeado"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>